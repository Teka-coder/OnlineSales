@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

    
        <div class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">@User.Identity.GetUserName() </a>
            <div class="dropdown-menu bg-primary rounded-0 border-0 m-0">
                <a href="@Url.Action("Index","Home")" class="dropdown-item">My Order</a>
                <a href="@Url.Action("Index","Home")" class="dropdown-item">My Cart</a>
                <a href="@Url.Action("Index","Home")" class="dropdown-item">Checkout</a>
                <a href="javascript:document.getElementById('logoutForm').submit()" class="dropdown-item">Log Out</a>
            </div>
        </div>

    }
}
else
{
    <div class="btn-group">
        <button type="button" class="btn btn-sm btn-light dropdown-toggle" data-toggle="dropdown">Go to Account</button>
        <div class="dropdown-menu dropdown-menu-right">
            <button class="dropdown-item" type="button">@Html.ActionLink("Log in", "Login", "Account")</button>
            <button class="dropdown-item" type="button">@Html.ActionLink("Sign up", "Register", "Account")</button>
        </div>
    </div>
}
